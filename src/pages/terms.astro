---
/**
 * Terms of Service Page
 * 
 * Standard terms of service for a small dev studio website.
 * 
 * @ai_prompt Terms of service - simple, appropriate for small business
 * @context_boundary pages/legal
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { breadcrumbSchema } from '../utils/jsonld';

const jsonLd = breadcrumbSchema([
  { name: 'Home', url: '/' },
  { name: 'Terms of Service', url: '/terms' }
]);

const lastUpdated = 'January 2024';
---

<BaseLayout
  title="Terms of Service"
  description="Terms of service for Toledo Technologies website and services. Please read these terms carefully before using our services."
  jsonLd={jsonLd}
>
  <section class="container-narrow section-padding">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl sm:text-4xl font-bold text-surface-900 mb-4">
        Terms of Service
      </h1>
      <p class="text-surface-500 mb-8">Last updated: {lastUpdated}</p>
      
      <div class="prose prose-lg prose-slate max-w-none prose-headings:font-display prose-headings:tracking-tight">
        <h2>Agreement to Terms</h2>
        <p>
          By accessing or using the Toledo Technologies website at toledotechnologies.com 
          ("the Site"), you agree to be bound by these Terms of Service. If you disagree 
          with any part of these terms, you may not access the Site.
        </p>
        
