---
/**
 * Individual Codebase Product Page
 * 
 * Dynamic page for each codebase product with full details.
 * 
 * @ai_prompt Product page template - high-trust layout with capabilities, FAQ, CTA
 * @context_boundary pages
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { breadcrumbSchema, productSchema, faqSchema } from '../../utils/jsonld';

export async function getStaticPaths() {
  const codebases = await getCollection('codebases');
  return codebases.map((codebase) => ({
    params: { slug: codebase.slug },
    props: { codebase },
  }));
}

const { codebase } = Astro.props;
const { Content } = await codebase.render();

const faqs = [
  {
    question: 'What license do I get?',
    answer: 'You receive a perpetual license with full rights to modify, deploy, and build upon the codebase. You can use it for internal tools, client projects, or SaaS products.'
  },
  {
    question: 'Is support included?',
    answer: 'Yes, each purchase includes a support period (30-90 days depending on the product) where we answer questions and help with initial setup.'
  },
  {
    question: 'Can I see a demo first?',
    answer: 'Absolutely. Contact us to schedule a demo and see the codebase in action before purchasing.'
  },
  {
    question: 'What if I need customization?',
    answer: 'We can customize the codebase to your specific needs for an additional fee. Contact us to discuss your requirements.'
  }
];

const jsonLd = [
  breadcrumbSchema([
    { name: 'Home', url: '/' },
    { name: 'Codebases', url: '/codebases' },
    { name: codebase.data.title, url: `/codebases/${codebase.slug}` }
  ]),
  productSchema({
    name: codebase.data.title,
    description: codebase.data.description,
    url: `/codebases/${codebase.slug}`,
    status: codebase.data.status,
    category: codebase.data.category
  }),
  faqSchema(faqs)
];

const statusLabels: Record<string, { text: string; class: string; description: string }> = {
  'available': { 
    text: 'Available Now', 
    class: 'bg-green-100 text-green-700 border-green-200',
    description: 'Ready to purchase and deploy'
  },
  'limited': { 
    text: 'Limited Availability', 
    class: 'bg-yellow-100 text-yellow-700 border-yellow-200',
    description: 'Available to select buyers'
  },
  'in-development': { 
    text: 'In Development', 
    class: 'bg-blue-100 text-blue-700 border-blue-200',
    description: 'Early access available for design partners'
  },
};

const status = statusLabels[codebase.data.status] || statusLabels['available'];
const contactSubject = encodeURIComponent(`Interest in ${codebase.data.title}`);
---

<BaseLayout
  title={codebase.data.title}
  description={codebase.data.description}
  jsonLd={jsonLd}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-brand-50 via-white to-surface-50">
    <div class="container-wide section-padding-sm">
      <div class="max-w-4xl">
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class="text-sm font-medium text-surface-500 uppercase tracking-wide">
            {codebase.data.category}
          </span>
          <span class={`text-sm font-medium px-3 py-1 rounded-full border ${status.class}`}>
            {status.text}
          </span>
        </div>
        <h1 class="text-4xl sm:text-5xl font-bold text-surface-900 mb-4">
          {codebase.data.title}
        </h1>
        <p class="text-xl text-surface-600 mb-6">
          {codebase.data.tagline}
        </p>
        <p class="text-surface-600 mb-8">
          {codebase.data.description}
        </p>
        <div class="flex flex-wrap gap-4">
          <a href={`/contact?subject=${contactSubject}`} class="btn-primary">
            Request Details
          </a>
          <a href="/codebases" class="btn-secondary">
            ← Back to Catalog
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="container-wide section-padding-sm">
    <div class="grid lg:grid-cols-3 gap-12">
      <!-- Content -->
      <div class="lg:col-span-2">
        <div class="prose prose-lg max-w-none prose-headings:font-display prose-headings:tracking-tight prose-a:text-brand-600">
          <Content />
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Status -->
        <div class={`rounded-xl p-6 border ${status.class}`}>
          <h3 class="font-semibold mb-2">{status.text}</h3>
          <p class="text-sm">{status.description}</p>
        </div>

        <!-- Key Features -->
        <div class="bg-surface-50 rounded-xl p-6 border border-surface-200">
          <h3 class="font-semibold text-surface-900 mb-4">Key Capabilities</h3>
          <ul class="space-y-2">
            {codebase.data.features.slice(0, 6).map((feature) => (
              <li class="flex items-start gap-2 text-sm">
                <svg class="w-4 h-4 text-brand-600 mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-surface-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- What's Included -->
        <div class="bg-white rounded-xl p-6 border border-surface-200">
          <h3 class="font-semibold text-surface-900 mb-4">What's Included</h3>
          <ul class="space-y-2">
            {codebase.data.included.map((item) => (
              <li class="flex items-start gap-2 text-sm">
                <span class="text-brand-600">→</span>
                <span class="text-surface-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Who It's For -->
        <div class="bg-white rounded-xl p-6 border border-surface-200">
          <h3 class="font-semibold text-surface-900 mb-4">Who It's For</h3>
          <ul class="space-y-2">
            {codebase.data.targetAudience.map((audience) => (
              <li class="text-sm text-surface-700">• {audience}</li>
            ))}
          </ul>
        </div>

        <!-- CTA -->
        <div class="bg-brand-600 rounded-xl p-6 text-white">
          <h3 class="font-semibold mb-2">Interested?</h3>
          <p class="text-brand-100 text-sm mb-4">
            Get in touch for pricing, demo access, or questions.
          </p>
          <a 
            href={`/contact?subject=${contactSubject}`}
            class="block w-full text-center px-4 py-2 rounded-lg bg-white text-brand-600 font-medium hover:bg-brand-50 transition-colors"
          >
            Request Details
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="bg-surface-50 border-y border-surface-200">
    <div class="container-wide section-padding">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl font-bold text-surface-900 mb-8 text-center">
          Frequently Asked Questions
        </h2>
        <div class="space-y-4">
          {faqs.map((faq) => (
            <div class="bg-white rounded-xl p-6 border border-surface-200">
              <h3 class="font-semibold text-surface-900 mb-2">{faq.question}</h3>
              <p class="text-surface-600 text-sm">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Related -->
  <section class="container-wide section-padding-sm">
    <div class="text-center">
      <h2 class="text-xl font-bold text-surface-900 mb-4">Explore More</h2>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/codebases" class="btn-secondary">View All Codebases</a>
        <a href="/services" class="btn-ghost">See Our Services</a>
      </div>
    </div>
  </section>
</BaseLayout>
