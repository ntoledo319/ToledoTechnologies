/**
 * Home Page
 * 
 * Main landing page for Toledo Technologies featuring hero section,
 * bento-grid layout with services, codebases, and social proof.
 * 
 * @ai_prompt Primary conversion page - optimize CTAs and value props
 * @context_boundary pages
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { organizationSchema, websiteSchema } from '../utils/jsonld';

const jsonLd = [organizationSchema(), websiteSchema()];

const services = [
  {
    title: 'Fix & Improve',
    description: 'Bug fixes, performance optimization, and refactoring. We clean up the mess.',
    icon: 'ðŸ”§',
