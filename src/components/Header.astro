---
/**
 * Header.astro
 * 
 * Main site navigation header with responsive mobile menu.
 * Features text-based logo/wordmark and primary navigation links.
 * 
 * @ai_prompt Modify navigation links here when adding new pages.
 * @context_boundary components/navigation
 */
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/services', label: 'Services' },
  { href: '/codebases', label: 'Codebases' },
  { href: '/case-studies', label: 'Case Studies' },
  { href: '/blog', label: 'Blog' },
  { href: '/nonprofit', label: 'Nonprofit' },
  { href: '/about', label: 'About' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-surface-200/50">
  <nav class="container-wide" aria-label="Main navigation">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group" aria-label="Toledo Technologies Home">
        <div class="w-9 h-9 rounded-lg bg-gradient-to-br from-brand-600 to-brand-700 flex items-center justify-center shadow-sm group-hover:shadow-md transition-shadow">
          <span class="text-white font-bold text-lg">T</span>
        </div>
        <span class="font-display font-semibold text-lg text-surface-900 hidden sm:block">
          Toledo<span class="text-brand-600">Tech</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'px-3 py-2 rounded-lg text-sm font-medium transition-colors',
              isActive(link.href)
                ? 'text-brand-600 bg-brand-50'
                : 'text-surface-600 hover:text-surface-900 hover:bg-surface-100',
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA + Mobile Menu -->
      <div class="flex items-center gap-3">
        <a href="/contact" class="btn-primary hidden sm:inline-flex">
          Get a Quote
        </a>
        
        <!-- Mobile Menu Button -->
        <button
          type="button"
          class="lg:hidden p-2 rounded-lg text-surface-600 hover:bg-surface-100 transition-colors"
          aria-label="Toggle menu"
          aria-expanded="false"
          id="mobile-menu-button"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" id="menu-icon-open" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" id="menu-icon-close" class="hidden" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="py-4 space-y-1 border-t border-surface-200">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'block px-3 py-2.5 rounded-lg text-base font-medium transition-colors',
              isActive(link.href)
                ? 'text-brand-600 bg-brand-50'
                : 'text-surface-600 hover:text-surface-900 hover:bg-surface-100',
            ]}
          >
            {link.label}
          </a>
        ))}
        <div class="pt-3 px-3">
          <a href="/contact" class="btn-primary w-full justify-center">
            Get a Quote
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const openIcon = document.getElementById('menu-icon-open');
  const closeIcon = document.getElementById('menu-icon-close');

  menuButton?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden') === false;
    menuButton.setAttribute('aria-expanded', String(isOpen));
    openIcon?.classList.toggle('hidden', isOpen);
    closeIcon?.classList.toggle('hidden', !isOpen);
  });
</script>
