            </svg>
          </a>
          <a
            href="mailto:hello@toledotechnologies.com"
            class="p-2 rounded-lg bg-surface-800 hover:bg-surface-700 transition-colors"
            aria-label="Email Us"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Footer Sections -->
      {footerSections.map((section) => (
        <div>
          <h3 class="font-semibold text-white mb-3 text-sm uppercase tracking-wide">
            {section.title}
          </h3>
          <ul class="space-y-2">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-surface-400 hover:text-white transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-surface-800 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-surface-500">
        &copy; {currentYear} Toledo Technologies. All rights reserved.
      </p>
      <p class="text-sm text-surface-500">
        Built with care. Shipped remotely.
      </p>
    </div>
  </div>
</footer>
