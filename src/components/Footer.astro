const footerSections = [
  {
    title: 'Services',
    links: [
      { href: '/services#fix', label: 'Fix & Improve' },
      { href: '/services#build', label: 'Build Features' },
      { href: '/services#automate', label: 'Automation' },
      { href: '/codebases', label: 'Buy Codebases' },
    ],
  },
  {
    title: 'Products',
    links: [
      { href: '/codebases/tallysec', label: 'TallySec' },
      { href: '/codebases/complycrawl', label: 'ComplyCrawl' },
      { href: '/codebases/aegistwin', label: 'AegisTwin' },
    ],
  },
  {
    title: 'Company',
    links: [
      { href: '/about', label: 'About' },
      { href: '/nonprofit', label: 'Nonprofit Work' },
      { href: '/blog', label: 'Blog' },
      { href: '/case-studies', label: 'Case Studies' },
    ],
  },
  {
    title: 'Legal',
    links: [
      { href: '/privacy', label: 'Privacy Policy' },
      { href: '/terms', label: 'Terms of Service' },
      { href: '/contact', label: 'Contact' },
