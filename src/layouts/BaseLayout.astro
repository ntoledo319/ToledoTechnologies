---
/**
 * BaseLayout.astro
 * 
 * Main layout wrapper for all pages on Toledo Technologies website.
 * Includes SEO meta tags, JSON-LD structured data, and global navigation.
 * 
 * @ai_prompt Use this layout for all pages. Pass title, description, and optional SEO props.
 * @context_boundary layouts
 */
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEOHead from '../components/SEOHead.astro';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  noindex?: boolean;
  jsonLd?: object | object[];
}

const {
  title,
  description,
  canonical,
  ogImage = '/og-default.png',
  ogType = 'website',
  publishedTime,
  modifiedTime,
  author,
  noindex = false,
  jsonLd,
} = Astro.props;

const siteUrl = 'https://toledotechnologies.com';
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).toString();
const fullTitle = title === 'Home' ? 'Toledo Technologies | Remote Software Development Studio' : `${title} | Toledo Technologies`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <SEOHead
      title={fullTitle}
      description={description}
      canonical={canonicalUrl}
      ogImage={ogImage}
      ogType={ogType}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      author={author}
      noindex={noindex}
    />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Sitemap reference -->
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
    
    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- JSON-LD Structured Data -->
    {jsonLd && (
      Array.isArray(jsonLd) ? (
        jsonLd.map((data) => (
          <script type="application/ld+json" set:html={JSON.stringify(data)} />
        ))
      ) : (
        <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
      )
    )}
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
